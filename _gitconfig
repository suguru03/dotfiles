[core]
	excludesfile = ~/.gitignore_global
	editor = vim
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[user]
	name = Suguru Motegi
	email = suguru.motegi@gmail.com
[commit]
	template = ~/.stCommitMsg
[ghq]
	root = ~/Documents/workspace
[alias]
	br = branch
	ca = commit --amend
	can = commit --all --amend --no-edit
	ci = commit
	co = checkout
	cp = cherry-pick
	fe = -c diff.mnemonicprefix=false -c core.quotepath=false fetch --prune origin
	hard = reset --hard
	ll = log --graph --decorate --oneline --abbrev-commit
	p = push origin master
	pop = stash pop
	pr = pull --rebase upstream
	soft = reset --soft
	st = status
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
